<div>
    {{ general.brand | header: general.slogan, logo }}
    
    <div class="product product--detail {{ theme.theme }} {{ theme.layout }}">
        <div class="product__container">
            <div class="product__row">
                {% for item in newsItems -%}
                    <div class="product__col">
                        <div class="example-1 card">
                            <div class="wrapper">
                            <div class="date">
                                <span class="day">10</span>
                                <span class="month">MAR</span>
                                <span class="year">2021</span>
                            </div>
                            <div class="data">
                                <div class="content">
                                <span class="author">Jane Doe</span>
                                <h1 class="title"><a href="#">Everything You Need to Know About Gold Medals</a></h1>
                                <p class="text">Olympic gold medals contain only about 1.34 percent gold, with the rest composed of sterling silver.</p>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                {% endfor -%}
            </div>
        </div>
    </div>

    {{ theme.theme | footer }}

</div>
